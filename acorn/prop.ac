let p: bool
let q: bool
let r: bool

axiom simplification: p -> (q -> p)
axiom distribution: (p -> (q -> r)) -> ((p -> q) -> (p -> r))
axiom contraposition: (!p -> !q) -> (q -> p)
axiom modus_ponens(p, p -> q): q

