{
  "name": "Acorn",
  "fileTypes": ["ac"],
  "scopeName": "source.acorn",
  "patterns": [
    {
      "match": "//.*$",
      "name": "comment.line.double-slash"
    },
    {
      "match": "\\b(if|else|forall|exists|by|function)\\b",
      "name": "keyword.control"
    },
    {
      "match": "-|>|<|!|\\||&|\\+",
      "name": "keyword.operator"
    },
    {
      "match": "\\b(let|axiom|define|theorem|type|struct)\\b",
      "name": "keyword.declaration"
    },
    {
      "match": "\\bbool\\b",
      "name": "keyword.type"
    },
    {
      "match": "\\bimport\\b",
      "name": "keyword.import"
    },
    {
      "match": "\\b(true|false)\\b",
      "name": "keyword.constant"
    }
  ]
}
