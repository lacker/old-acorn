{
  "name": "Acorn",
  "fileTypes": ["ac"],
  "scopeName": "source.acorn",
  "patterns": [
    {
      "match": "//.*$",
      "name": "comment.line.double-slash"
    },
    {
      "match": "\\b(if|else|forall|exists|by|function|satisfy|and|or|not)\\b",
      "name": "keyword.control"
    },
    {
      "match": "-|>|<|\\+",
      "name": "keyword.operator"
    },
    {
      "match": "\\b(let|axiom|define|theorem|type|structure|inductive|class|numerals)\\b",
      "name": "keyword.declaration"
    },
    {
      "match": "\\bimport\\b",
      "name": "keyword.import"
    },
    {
      "match": "\\bfrom\\b",
      "name": "keyword.from"
    },
    {
      "match": "\\b(true|false)\\b",
      "name": "keyword.constant"
    },
    {
      "match": "\\b[0-9]+\\b",
      "name": "constant.numeric"
    },
    {
      "match": "\\b[a-z][a-zA-Z0-9_]*\\b",
      "name": "variable"
    },
    {
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
      "name": "entity.name.type"
    }
  ]
}
