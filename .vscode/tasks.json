{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "extension: npm compile",
      "type": "npm",
      "script": "compile",
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "extension: npm watch",
      "type": "npm",
      "script": "watch",
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "infoview: npm build",
      "type": "npm",
      "script": "build",
      "options": {
        "cwd": "${workspaceFolder}/vscode/infoview"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": []
    },
    {
      "label": "build all",
      "dependsOn": [
        "extension: npm compile",
        "infoview: npm build",
        "cargo build"
      ],
      "dependsOrder": "parallel"
    }
  ]
}
