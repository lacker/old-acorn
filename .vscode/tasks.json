{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm watch extension",
      "type": "npm",
      "script": "watch",
      "options": {
        "cwd": "${workspaceFolder}/vscode/extension"
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Extension",
      "dependsOn": ["npm watch extension", "cargo build"],
      "dependsOrder": "parallel"
    }
  ]
}
