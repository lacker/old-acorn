theorem lt_not_symm(a: Nat, b: Nat) { a < b -> not b < a } by {
    define f(x: Nat) -> Bool {
        forall(y: Nat) { lt_not_symm(x, y) }
    }
    f(0)
    forall(x: Nat) {
        if f(x) {
            forall(y: Nat) {
                if x.suc < y {
                    y != 0
                    zero_or_suc(y)
                    y = 0 or exists(z: Nat) { y = z.suc }
                    let (z: Nat) satisfy { y = z.suc }
                    x.suc < z.suc
                    x < z
                    lt_not_symm(x, z)
                    not z < x
                    not (z.suc < x.suc)
                    not (y < x.suc)
                }
                if not lt_not_symm(x.suc, y) {
                    x.suc < y
                    false
                }
                lt_not_symm(x.suc, y)
            }
            f(x.suc)
        }
    }
    f(a)
    lt_not_symm(a, b)
}

