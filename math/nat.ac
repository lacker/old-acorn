        lte_trans(x, y, 0)
    }
    f(0)
    forall(z: Nat) {
        if f(z) {
            forall(x: Nat, y: Nat) {
                if x <= y and y <= z.suc {
                    let (d: Nat) satisfy { x + d = y }
                    let (e: Nat) satisfy { y + e = z.suc }
                    x + (d + e) = z.suc
                    x <= z.suc
                }
                lte_trans(x, y, z.suc)
            }
            f(z.suc)
        }
    }
    f(c)
}

