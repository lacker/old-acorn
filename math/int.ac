theorem abs_mul(a: Int, b: Int) { abs(a * b) = abs(a) * abs(b) } by {
    if is_positive(a) {
        if is_positive(b) {
            abs(a * b) = abs(a) * abs(b)
        } else {
            abs(mul_nat(a, abs(b))) = abs(a * b)
            abs(a * b) = abs(a) * abs(b)
