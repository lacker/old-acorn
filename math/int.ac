define is_unit(a: Int) -> Bool { abs(a) = nat.1 }

theorem two_units(u: Int) { is_unit(u) -> u = 1 or u = negate(1) } by {
    abs(u) = Nat.1
    if Int.from_nat(abs(u)) = u {
        u = 1
    } else {
        u = negate(1)
    }
}

