    } else {
        if is_positive(b) {
            abs(a * b) = abs(b * a)
            abs(a) * abs(b) = abs(b) * abs(a)
            abs(mul_nat(b, abs(a))) = abs(b * a)
            pos_part(b) * abs(a) = abs(a * b)
            abs(a * b) = abs(a) * abs(b)
        } else {
