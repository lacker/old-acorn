let from_nat: Nat -> Int = Int.from_nat

// match syntax would be nicer for defining these basic functions on inductive types
define abs_case_1(a: Int, n: Nat) -> Bool {
    a = Int.from_nat(n)
}

define abs_case_2(a: Int, n: Nat) -> Bool {
    exists(k: Nat) {
        a = Int.neg_suc(k) and n = k.suc
    }
}

let abs(a: Int) -> n: Nat satisfy {
    abs_case_1(a, n) or abs_case_2(a, n)
}

theorem abs_from_nat(n: Nat) {
    abs(Int.from_nat(n)) = n
} by {
    if abs_case_1(Int.from_nat(n), abs(Int.from_nat(n))) {
        abs(Int.from_nat(n)) = n
    } else {
        abs_case_2(Int.from_nat(n), abs(Int.from_nat(n)))
        false
    }
}

