theorem mul_int_nat_nat_assoc(a: Int, j: Nat, k: Nat) { mul_nat(a, j * k) = mul_nat(mul_nat(a, j), k) } by {
    if is_negative(a) {
        // Simplify lhs
        a = negate(Int.from_nat(abs(a)))
        mul_nat(a, j * k) = negate(Int.from_nat(abs(a) * (j * k)))
        mul_nat(a, j * k) = negate(Int.from_nat(abs(a) * j * k))
        
        // Simplify rhs
        mul_nat(a, j) = negate(Int.from_nat(abs(a) * j))
        mul_nat(mul_nat(a, j), k) = mul_nat(negate(Int.from_nat(abs(a) * j)), k)
        mul_nat(mul_nat(a, j), k) = negate(mul_nat(Int.from_nat(abs(a) * j), k))
        mul_nat(mul_nat(a, j), k) = negate(Int.from_nat(abs(a) * j * k))

        // Conclusion
        mul_nat(a, j * k) = mul_nat(mul_nat(a, j), k)
    } else {
        // Simplify lhs
        mul_nat(a, j * k) = Int.from_nat(abs(a) * (j * k))
        mul_nat(a, j * k) = Int.from_nat(abs(a) * j * k)
        
        // Simplify rhs
        mul_nat(a, j) = Int.from_nat(abs(a) * j)
        mul_nat(mul_nat(a, j), k) = mul_nat(Int.from_nat(abs(a) * j), k)
        mul_nat(mul_nat(a, j), k) = Int.from_nat(abs(a) * j * k)

        // Conclusion
        mul_nat(a, j * k) = mul_nat(mul_nat(a, j), k)
    }
}

theorem mul_int_int_nat_assoc(a: Int, b: Int, n: Nat) { mul_nat(a * b, n) = a * mul_nat(b, n) } by {
    if is_negative(b) {
        b = negate(Int.from_nat(abs(b)))
        mul_nat(a * b, n) = mul_nat(a * negate(Int.from_nat(abs(b))), n)
        mul_nat(a * b, n) = mul_nat(negate(mul_nat(a, abs(b))), n)
        mul_nat(a * b, n) = negate(mul_nat(mul_nat(a, abs(b)), n))
        mul_nat(a * b, n) = negate(mul_nat(a, abs(b) * n))
        mul_nat(a * b, n) = negate(a * Int.from_nat(abs(b) * n))
        mul_nat(a * b, n) = a * negate(Int.from_nat(abs(b) * n))
        mul_nat(a * b, n) = a * mul_nat(negate(Int.from_nat(abs(b))), n)
        mul_nat(a * b, n) = a * mul_nat(b, n)
    } else {
        a * b = mul_nat(a, abs(b))
        mul_nat(a, abs(b) * n) = mul_nat(a * b, n)
        Int.from_nat(abs(b) * n) = mul_nat(b, n)
        mul_nat(a, abs(b) * n) = a * mul_nat(b, n)
        mul_nat(a * b, n) = a * mul_nat(b, n)
    }
}

theorem mul_assoc(a: Int, b: Int, c: Int) { a * b * c = a * (b * c) } by {
    if is_negative(c) {
        c = negate(Int.from_nat(abs(c)))
        a * b * c = a * b * negate(Int.from_nat(abs(c)))
        a * b * c = negate(a * b * Int.from_nat(abs(c)))
        a * b * c = negate(mul_nat(a * b, abs(c)))
        a * b * c = negate(a * mul_nat(b, abs(c)))
        a * b * c = a * negate(mul_nat(b, abs(c)))
        a * b * c = a * negate(b * Int.from_nat(abs(c)))
        a * b * c = a * (b * negate(Int.from_nat(abs(c))))
        a * b * c = a * (b * c)
    } else {
        c = Int.from_nat(abs(c))
        a * b * c = a * b * Int.from_nat(abs(c))
        a * b * c = mul_nat(a * b, abs(c))
        a * b * c = a * mul_nat(b, abs(c))
        a * b * c = a * (b * Int.from_nat(abs(c)))
        a * b * c = a * (b * c)
    }
}

