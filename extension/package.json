{
  "name": "acorn-extension",
  "version": "0.0.1",
  "description": "A VSCode extension for the Acorn language.",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "acorn",
        "extensions": [
          ".ac"
        ],
        "aliases": [
          "Acorn",
          "acorn"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "category": "Acorn",
        "command": "acorn.displayInfoview",
        "title": "Infoview: Display",
        "description": "Show the infoview."
      },
      {
        "category": "Acorn",
        "command": "acorn.toggleInfoview",
        "title": "Infoview: Toggle",
        "description": "Toggle whether the infoview is displayed."
      }
    ],
    "keybindings": [
      {
        "command": "acorn.toggleInfoview",
        "key": "ctrl+shift+enter",
        "mac": "cmd+shift+enter",
        "when": "editorTextFocus && editorLangId == acorn"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "acorn.displayInfoview",
          "group": "navigation",
          "when": "editorLangId == acorn"
        }
      ]
    }
  },
  "scripts": {
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./"
  },
  "author": "Kevin Lacker",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@types/vscode": "^1.82.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
